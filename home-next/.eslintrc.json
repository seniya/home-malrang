{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "next/core-web-vitals", 
    "eslint-config-standard",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "useTabs": false,
        "tabWidth": 2,
        "printWidth": 80,
        "arrowParens": "always"
      }
    ]
  },
  "globals": {
    "React": false
  }
}
